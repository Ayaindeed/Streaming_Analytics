<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
    <persistence-unit name="streamingPU" transaction-type="JTA">
        <description>Streaming Analytics Persistence Unit</description>
        <jta-data-source>java:comp/DefaultDataSource</jta-data-source>
        <class>com.streaming.model.Event</class>
        <class>com.streaming.model.VideoStats</class>
        <class>com.streaming.model.UserProfile</class>
        <class>com.streaming.model.Video</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
